{
    "exclude": [
        "node_modules",
        "test"
    ],
    "compilerOptions": {
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "rootDir": "src",
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}